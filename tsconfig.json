{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "outDir": "./dist",
        "esModuleInterop": true,
        "moduleDetection": "force",
        "allowJs": true,
        "resolveJsonModule": true,
        "noEmit": false,
        "baseUrl": ".",
        "skipLibCheck": true,
        "isolatedModules": true
    },
    "include": ["src/**/*.ts", "server.ts"]
}
